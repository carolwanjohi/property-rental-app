{{#if updateRentalForm}}

<h4>Update {{rental.owner}}'s {{rental.type}}</h4>

<div>

    <form>

        <div class="form-group">
            <label for="owner">Owner</label>
            {{input class="form-control" value=owner id="owner" placeholder=rental.owner}}
        </div>

        <div class="form-group">
            <label for="type">Type</label>
            {{input  class="form-control"  value=type id="type" placeholder=rental.type}}
        </div>

        <div class="form-group">
            <label for="city">City</label>
            {{input  class="form-control" value=city id="city" placeholder=rental.city}}
        </div>

        <div class="form-group">
            <label for="bedrooms">Number of Bedrooms</label>
            {{input  class="form-control" value=bedrooms id="bedrooms" placeholder=rental.bedrooms}}
        </div>

        <div class="form-group">
            <label for="image">Image URL</label>
            {{input  class="form-control" value=image id="image" placeholder=rental.image}}
        </div>

        <div class="form-group">
            <label for="latitude">Latitude:</label>
            {{input  class="form-control" value=rental.latitude id="latitude" placeholder=rental.latitude}}
        </div>

        <div class="form-group">
            <label for="longitude">Longitude:</label>
            {{input  class="form-control" value=rental.longitude id="longitude" placeholder=rental.longitude}}
        </div>

        <button class="btn btn-info" {{action 'update' rental}}>Save</button>

    </form>

</div>

{{else}}

    <button class="btn btn-info" {{action 'updateRentalForm'}}>Update</button>
    
{{/if}}