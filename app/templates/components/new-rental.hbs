{{#if addNewRental}}

    <h1>New Rental</h1>

    <div>
        <form>
            <div class="form-group">
                <label for="owner">Owner</label>
                {{input class="form-control" value=owner id="owner"}}
            </div>

            <div class="form-group">
                <label for="type">Type</label>
                {{input class="form-control" value=type id="type"}}
            </div>

            <div class="form-group">
                <label for="city">City</label>
                {{input class="form-control" value=city id="city"}}
            </div>

            <div class="form-group">
                <label for="bedrooms">Number of Bedrooms</label>
                {{input  class="form-control" value=bedrooms id="bedrooms"}}
            </div>

            <div class="form-group">
                <label for="totalRooms">Number of Total Rooms</label>
                {{input class="form-control" value=totalRooms id="totalRooms"}}
            </div> 

            <div class="form-group">
                <label for="image">Image URL</label>
                {{input class="form-control" value=image id="image"}}
            </div>

            <div class="form-group">
                <label for="cost">Price per night</label>
                {{input  class="form-control" value=cost id="cost"}}
            </div>

            <div class="form-group">
                <label for="latitude">Latitude:</label>
                {{input  class="form-control" value=latitude id="latitude"}}
            </div>

            <div class="form-group">
                <label for="longitude">Longitude:</label>
                {{input  class="form-control" value=longitude id="longitude"}}
            </div>

            <button class="btn btn-info" {{action 'saveRental1'}}>Save</button>
        </form>
    </div>

{{else}}

    <button class="btn btn-info" {{action 'rentalFormShow'}}> New Rental </button>

{{/if}}